{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.min.css">
{% endblock %}

{% block body %}

    <h2>{{ title }} </h2>
    <table id="example" class="display mdl-data-table" style="width:100%">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nazwa grupy</th>
            <th>Nazwa skr√≥cona</th>
            <th>NIP</th>
            <th>Nazwa kontrahenta</th>
        </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }} </td>
                <td>{{ client.nazwa_grupy }} </td>
                <td>{{ client.nazwa_skrocona }} </td>
                <td>{% if client.nip is null or client.nip is empty %}
                        brak nr NIP w bazie
                    {% else %}
                        {{ client.nip }}
                    {% endif %}
                </td>
                <td>{{ client.nazwa_kontrahenta }} </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block title %}{{ title }}{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.concat.min.js"></script>
