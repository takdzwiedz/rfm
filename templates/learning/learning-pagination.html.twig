{% extends 'base.html.twig' %}

{% block body %}

    {{ dump() }}

    <div class="count">
        {{ pagination.getTotalItemCount }}
    </div>
    <table>
        <thead>
        <tr>
            <th>{{ knp_pagination_sortable(pagination, 'Id', 'k.id') }}</th>
            <th>{{ knp_pagination_sortable(pagination, 'Id', 'k.nazwa_grupy') }}</th>
            <th>{{ knp_pagination_sortable(pagination, 'Nazwa Skr√≥cona', 'k.nazwa_skrocona') }}</th>
            <th>{{ knp_pagination_sortable(pagination, 'NIP', 'k.nip') }}</th>
            <th>{{ knp_pagination_sortable(pagination, 'Nazwa kontrahenta', 'k.nazwa_kontrahenta') }}</th>

        </tr>
        </thead>
        <tbody>
        {% for kontrahent in pagination %}
            <tr>
                <td>{{ kontrahent.id }} </td>
                <td>{{ kontrahent.nazwa_grupy }} </td>
                <td>{{ kontrahent.nazwa_skrocona }} </td>
                <td>{% if kontrahent.nip is null or kontrahent.nip is empty %}
                        brak nr NIP w bazie
                    {% else %}
                        {{ kontrahent.nip }}
                    {% endif %}
                </td>
                <td>{{ kontrahent.nazwa_kontrahenta }} </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        display navigation
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>

{% endblock %}