{% block stylesheets %}


    <link rel="stylesheet" type="text/css"
          href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css">


{% endblock %}

<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <!-- Brand -->
    <a class="navbar-brand" href="#">IT Center RFM Analiza</a>

    <!-- Links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" href="{{ path('analysis_client_group') }}">Kontrahenci</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('analysis_order_product_group') }}">Produkty</a>
        </li>


        <div class="btn-group">
            <a href="{{ path('analysis_order') }}" type="button" class="btn btn-secondary">Kontrahenci</a>
            <a type="button" class="btn btn-secondary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown"
               aria-haspopup="true" aria-expanded="false" onclick="getAllClientGroups()">
                <span class="sr-only">Toggle Dropdown</span>
            </a>
            <div class="dropdown-menu">
                <a class="dropdown-item" href="{{ path('analysis_client') }}">Klienci</a>
                {% if nav is defined %}
                    {% for i in nav %}
                        <a class="dropdown-item"
                           href="{{ path('analysis_client_group' , {'from': '', 'to': '', 'group': i.nazwa_grupy}) }}">{{ i.nazwa_grupy }}</a>
                    {% endfor %}
                {% endif %}
                {#                <a class="dropdown-item" href="#">Another action</a>#}
                {#                <a class="dropdown-item" href="#">Something else here</a>#}
                {#                <div class="dropdown-divider"></div>#}
                {#                <a class="dropdown-item" href="#">Separated link</a>#}
            </div>
        </div>

    </ul>
</nav>


{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/nav-bar.js') }}"></script>
    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
{% endblock %}