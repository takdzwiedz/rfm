{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/order-product-group.css') }}">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.min.css">
{% endblock %}

{% block body %}

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('analysis_product') }}">Produkty</a></li>
            <li class="breadcrumb-item"><a href="{{ path('analysis_category_product', {
                    'id_parent': subcategory_detail[0].id_parent,
                    'id_category': app.request.attributes.get('_route_params')['id_subcategory']
                }) }}">{{ subcategory_detail[0].main_category_name }}</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ subcategory_detail[0].category_name }}</li>
        </ol>
    </nav>

    <div class="form">
        <h3 class="header"><strong>
                {{ title }}
            </strong></h3>
        <div>
            <form action="{{ path(
                'analysis_subcategory_product', {
                    'id_subcategory': app.request.attributes.get('_route_params')['id_subcategory']}
            ) }}" method="get">

                <div class="row">
                    <div class="col">
                        <input type="date" data-provide="datepicker" class="datepicker form-control" name="from"
                               value="{{ from ? from : '' }}">
                    </div>
                    <div class="col">
                        <input type="date" class="form-control" name="to" value="{{ to ? to : '' }}">
                    </div>
                    <div class="col">
                        <button class="btn btn-success" type="submit">Przeszukaj</button>
                        <a href="{{ path('analysis_subcategory_product', {
                            'from': '',
                            'to': '',
                            'id_subcategory': app.request.attributes.get('_route_params')['id_subcategory']
                        }) }}"
                           class="btn btn-info" role="button">Resetuj</a>
                    </div>
                </div>
            </form>
        </div>
    </div>



    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
        <tr>
            <th>L.p.</th>
            <th>Id produktu</th>
            <th>Nazwa produktu</th>
            <th>Ilość sprzedanych produktow</th>
            <th>Suma netto sprzedanych produktow</th>
            <th>Suma brutto sprzedanych produktow</th>
        </tr>
        </thead>
        <tbody>
        {% for row in subcategory_product %}
            <tr>
                <td></td>
                <td>{{ row.id_product }} </td>
                <td>
                    <a href="{{ path('analysis_product_sale', {'id_product': row.id_product}) }}">

                        {{ row.product_name }}
                    </a>
                </td>
                <td>{{ row.quantity }}</td>
                <td>{{ row.net_sum }}</td>
                <td>{{ row.gross_sum }}</td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <th colspan="5" style="text-align:right">Łącznie:</th>
            <th></th>
        </tr>
        </tfoot>
    </table>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>

        {#        {{ gc_draw([bar_chart], ['div_bar_chart']) }}#}

    </script>

    <script type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.concat.min.js"></script>
    <script type="text/javascript" src="{{ asset('js/category.js') }}"></script>

{% endblock %}