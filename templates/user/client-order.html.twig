{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/order-product-group.css') }}">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css">
{% endblock %}

{% block body %}
    {% if client_exist %}
        {% if user_exist %}
            <div class="art-container">
                <div class="form">
                    <h3 class="header">{{ title }} {{ user_exist[0].imie_nazwisko }} u
                        kontrahenta {{ client_exist[0].nazwa_kontrahenta }}
                    </h3>
                    <div>
                        <form action="{{ path('analysis_user_order', {'id_client':  client_exist[0].id, 'id_user': user_exist[0].id_auth }) }}"
                              method="get">
                            <div class="row">
                                <div class="col">
                                    <input class="form-control" type="date" name="from"
                                           value="{{ from ? from : '' }}">
                                </div>
                                <div class="col">
                                    <input class="form-control" type="date" name="to" value="{{ to ? to : '' }}">
                                </div>
                                <div class="col">
                                    <button class="btn btn-success" type="submit">Przeszukaj</button>
                                    <a class="btn btn-info" role="button"
                                       href="{{ path('analysis_user_order', {'from': '', 'to': '', 'id_client':  client_exist[0].id, 'id_user': user_exist[0].id_auth }) }}">Resetuj</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                {% if user_client_order is empty %}
                    <h4>Brak zamówień użytkownika w wybranym okresie</h4>
                {% else %}

                    <div class="chart">
                        <div id="div_pie_chart"></div>
                    </div>
                    <table id="example" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                        <tr>
                            <th>Lp.</th>
                            <th>Nr zamówienia</th>
                            <th>Data złożenia</th>
                            <th>Data realizacji</th>
                            <th>Wartość zamówienia netto</th>
                            <th>Wartość zamówienia brutto</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for order in user_client_order %}
                            <tr>
                                <td></td>
                                <td>{{ order.numer_zamowienia }}</td>
                                <td>{{ order.data_zlozenia }} </td>
                                <td>{{ order.data_realizacji }} </td>
                                <td>{{ order.wartosc_netto }}</td>
                                <td>{{ order.wartosc_brutto }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                        <tr>
                            <th colspan="5" style="text-align:right">Łącznie:</th>
                            <th></th>
                        </tr>
                        </tfoot>
                    </table>
                {% endif %}
            </div>

        {% else %}
            <h4>Brak użytkownika o podanym id u kontrahenta {{ client_exist[0].nazwa_kontrahenta }}</h4>
        {% endif %}
    {% else %}
        <h4>Brak kontrahenta o podanym id</h4>
    {% endif %}


{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        {#        {{ gc_draw([pie_chart], ['div_pie_chart']) }}#}
    </script>
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.concat.min.js"></script>
    <script type="text/javascript" src="{{ asset('js/client-order.js') }}"></script>

{% endblock %}